    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">
        <div class="row"> 
          <div class="col-lg-8 mx-auto mt-lg-0">
            <br>
              <%= form_with(model: job_offer) do |f| %>
              <% if job_offer.errors.any? %>
                  <div style="color: red">
                    <h2><%= pluralize(job_offer.errors.count, "error") %> prohibited this job_offer from being saved:</h2>
                    <ul>
                      <% job_offer.errors.each do |error| %>
                        <li><%= error.full_message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %> 
              <div class="form-group mt-3">                 
                <%= f.label "Puesto", style: "display: block", class:"form-label" %>
