<!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Nuevo Usuario</h2>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">
        <div class="row"> 
          <div class="col-lg-8 mx-auto mt-lg-0">
            <br>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :post) do |f| %> 
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="row">

                <div class="col-md-6 form-group">                  
                  <%= f.label "Nombre", class:"form-label" %>
                  <%= f.text_field :name, autofocus: true, class:'form-control' %>
                </div> 
                <div class="col-md-6 form-group"> 
                  <%= f.label :birthdate, class:"form-label" %>
                  <%= f.date_field :birthdate, class:'form-control' %> 
                </div>
              </div>
              <div class="form-group mt-3">
                <%= f.label "Mail", class:"form-label" %>
                <%= f.email_field :email, class:'form-control' %>
              </div>
              <div class="form-group mt-3">
                <div class="field">
                  <%= f.label "Contraseña", class:"form-label" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres minimos)</em>
                  <% end %><br />
                  <%= f.password_field :password, class:'form-control' %>
                </div>
              </div>
              <div class="form-group mt-3">
                <%= f.label "confirmar Contraseña", class:"form-label" %><br />
                <%= f.password_field :password_confirmation, class:'form-control' %>
              </div>
              <div class="form-group mt-3">
                <%= f.label "Imagen de Perfil", class:"form-label" %><br />
                <%= f.file_field :photo, class:'form-control' %>  
              </div>  
              <br>            
                <div class="text-center">
                  <%= f.submit "Crear", class:'get-started-btn' %>
                </div>
              <% end %>    
          </div>
        </div>
      </div>
    </section><!-- End Contact Section -->